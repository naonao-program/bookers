<h2>Editing Books</h2>

<%= form_with model:@book, url:"/books/#{@book.id}", local: true do |f| %>
  <% if @book.errors.any? %>
  <div id = "error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2><br>
    <ul>
    	<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    </ul>
    <% end %>
  </div>
<% end %>

	<div class="field" >
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="field" >
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>

	<div class="action" >
		<%= f.submit "Update Book" %>
	</div>
<% end %>
